{
  "extends": ["next/core-web-vitals", "prettier"],
  "rules": {
    "no-restricted-imports": [
      "error",
      {
        "paths": [
          {
            "name": "next/document",
            "message": "Import next/document only from pages/_document.*."
          }
        ]
      }
    ]
  },
  "overrides": [
    {
      "files": ["pages/_document.*"],
      "rules": {
        "no-restricted-imports": "off"
      }
    }
  ]
}
